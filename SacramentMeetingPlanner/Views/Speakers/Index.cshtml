@model IEnumerable<SacramentMeetingPlanner.Models.Speakers>

@{
    ViewData["Title"] = "Index";
}

<h2>Speakers</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]"> @Html.DisplayNameFor(model => model.Speaker1)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Speaker2)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Speaker3)</a>
            </th>
                <th>
                    <a asp-action="Create">Create New</a>
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Speaker1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speaker2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speaker3)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SpeakersID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SpeakersID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SpeakersID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
